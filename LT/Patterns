5. * * * * *
   * * * *
   * * *
   * *
   *

Code:
#include<iostream>
using namespace std;

int main()
{
    for(int i = 1; i<=5 ; i++)
    {
        for(int j = 0; j<5-i+1;j++){
            cout<<"*";
        }
        cout<<endl;
    }
}

 
6. 1 2 3 4 5
   1 2 3 4
   1 2 3
   1 2
   1

Code:
#include<iostream>
using namespace std;

int main()
{
    for(int i = 1; i<=5 ; i++)
    {
        for(int j = 1; j<=5-i+1;j++){
            cout<<j;
        }
        cout<<endl;
    }
}

7.             *
              * *
             * * *
            * * * *
          * * * * * *
        * * * * * * * *
      * * * * * * * * * *

Code: 
#include<iostream>
using namespace std;

int main()
{
    for(int i=0; i<=7;i++)
    {
        for(int j = 0;j<7-i-1;j++)
        {
            cout<<" ";
        }
        for(int j = 0; j< 2*i+1;j++)
        {
            cout<<"*";
        }
        for(int j = 0;j<7-i-1;j++)
        {
            cout<<" ";
        }
        cout<<endl;
    }
}

8. * * * * * * * * *
     * * * * * * *
       * * * * *
         * * *
           *

Code:
#include<iostream>
using namespace std;

int main()
{
    for(int i=0; i<=5;i++)
    {
        for(int j = 0;j<i;j++)
        {
            cout<<" ";
        }
        for(int j = 0; j<10-( 2*i+1);j++)
        {
            cout<<"*";
        }
        for(int j = 0;j<i;j++)
        {
            cout<<" ";
        }
        cout<<endl;
    }
}

9.      *
      * *
    * * *
  * * * *
* * * * *
  * * * *
    * * *
      * *
        *

Code:
#include<iostream>
using namespace std;

int main()
{
    for(int i=1;i<=2*5-1;i++)
    {
        int stars = i;
        if(i>5)
        stars = 2*5-i;
        for(int j=1;j<=stars;j++)
        {
            cout<<"*";
        }
        cout<<endl;
    }
}

