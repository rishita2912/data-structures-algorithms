1.  ****
    ****
    ****
    ****

Code:
 #include<iostream>
using namespace std;

int main()
{
    for(int i=0;i<4;i++)
    {
        for(int j=0;j<4;j--)
        {
            cout<< "*";
        }
        cout<<endl;
    }
    
}


2. *
   * *
   * * *
   * * * *

Code:
#include<iostream>
using namespace std;

int main()
{
    for(int i = 0;i<4;i++)
    {
        for(int j=0;j<=i;j++)
        {
            cout<<"*";
        }
        cout<<endl;
    }
}


